  <script>
    // API ì—”ë“œí¬ì¸íŠ¸ ì§€ì •
    const listApiUrl = '/api/goods/all';
    const detailApiUrl = id => `/api/goods/${id}`;

    // ğŸ’¡ ì´ë¯¸ì§€ê°€ ì—†ì„ ë•Œ ë³´ì—¬ì¤„ ê¸°ë³¸ ì´ë¯¸ì§€ (placeholder)
    const defaultImage = "https://via.placeholder.com/220x160?text=No+Image";

    // ì¹´ë“œ ë Œë”ë§
    function renderCards(goods) {
      const list = document.getElementById('card-list');
      list.innerHTML = '';
      goods.forEach(item => {
        const card = document.createElement('div');
        card.className = 'card';
        card.onclick = () => openDetail(item.id);

        // ğŸ’¡ DB ë°ì´í„° ì•ˆì „ ì²˜ë¦¬ (imageê°€ nullì´ë©´ ê¸°ë³¸ ì´ë¯¸ì§€, name ëŒ€ì‹  title ì‚¬ìš©)
        const displayImage = item.image || defaultImage;
        const displayTitle = item.title; // DB ì»¬ëŸ¼ëª… title
        const displayPrice = item.price ? item.price.toLocaleString() + "ì›" : "ê°€ê²© ë¯¸ì •";

        card.innerHTML = `
          <img src="${displayImage}" alt="${displayTitle}">
          <div class="card-title">${displayTitle}</div>
          <span class="card-price">${displayPrice}</span>
        `;
        list.appendChild(card);
      });
    }

    // ìƒì„¸ ì •ë³´ ëª¨ë‹¬ ì˜¤í”ˆ
    async function openDetail(id) {
      try {
        const res = await fetch(detailApiUrl(id));
        if (!res.ok) throw new Error();
        const item = await res.json();
        showModal(item);
      } catch (err) {
        console.error(err);
        alert("ìƒì„¸ ì •ë³´ë¥¼ ë¶ˆëŸ¬ì˜¤ì§€ ëª»í–ˆìŠµë‹ˆë‹¤.");
      }
    }

    function showModal(item) {
      // ğŸ’¡ ëª¨ë‹¬ ë°ì´í„°ë„ ì•ˆì „í•˜ê²Œ ì²˜ë¦¬
      document.getElementById('modal-img').src = item.image || defaultImage;
      document.getElementById('modal-title').innerText = item.title; // DB ì»¬ëŸ¼ëª… title
      
      const displayPrice = item.price ? item.price.toLocaleString() + "ì›" : "ê°€ê²© ë¯¸ì •";
      document.getElementById('modal-price').innerText = displayPrice;
      
      document.getElementById('modal-description').innerText = item.description || "";
      document.getElementById('detail-modal').style.display = "flex";
    }

    function closeModal() {
      document.getElementById('detail-modal').style.display = "none";
    }

    // esc í‚¤ë¡œ ëª¨ë‹¬ ë‹«ê¸°
    document.addEventListener('keydown', (e) => {
