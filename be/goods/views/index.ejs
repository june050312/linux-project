    // ìƒí’ˆ ë¦¬ìŠ¤íŠ¸ ë¶ˆëŸ¬ì˜¤ê¸°
    async function fetchGoods() {
      try {
        const res = await fetch(listApiUrl);
        if (!res.ok) throw new Error();
        const goods = await res.json();
        
        if (goods.length === 0) {
             document.getElementById('card-list').innerText = "ë“±ë¡ëœ ìƒí’ˆì´ ì—†ìŠµë‹ˆë‹¤.";
             return;
        }
        
        renderCards(goods);
      } catch (err) {
